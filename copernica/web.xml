<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<servlet>
		<servlet-name>com.exedio.copernica.admin_jsp</servlet-name>
		<servlet-class>com.exedio.copernica.admin_jsp</servlet-class>
		<init-param>
			<param-name>com.exedio.copernica.model</param-name>
			<param-value>com.exedio.cope.testmodel.Main#model</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>com.exedio.copernica.admin_jsp</servlet-name>
		<url-pattern>/admin.jsp</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>com.exedio.copernica.copernica_jsp</servlet-name>
		<servlet-class>com.exedio.copernica.copernica_jsp</servlet-class>
		<init-param>
			<param-name>com.exedio.copernica.provider</param-name>
			<param-value>com.exedio.copernica.CopernicaTestProvider</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>com.exedio.copernica.copernica_jsp</servlet-name>
		<url-pattern>/copernica.jsp</url-pattern>
	</servlet-mapping>

	<description>
		Copernica Test Application
	</description>
	<display-name>Copernica Test Application</display-name>
	
	<session-config>
		<session-timeout>30</session-timeout>    <!-- 30 minutes -->
	</session-config>
	
	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>
	<servlet>
		<servlet-name>com.exedio.copernica.error_jsp</servlet-name>
		<servlet-class>com.exedio.copernica.error_jsp</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>com.exedio.copernica.error_jsp</servlet-name>
		<url-pattern>/error.jsp</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<exception-type>com.exedio.copernica.CopernicaAuthorizationFailedException</exception-type>
		<location>/copernica.authorization.failed.jsp</location>
	</error-page>
	<servlet>
		<servlet-name>com.exedio.copernica.copernica_authorization_failed_jsp</servlet-name>
		<servlet-class>com.exedio.copernica.copernica_authorization_failed_jsp</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>com.exedio.copernica.copernica_authorization_failed_jsp</servlet-name>
		<url-pattern>/copernica.authorization.failed.jsp</url-pattern>
	</servlet-mapping>

</web-app>
