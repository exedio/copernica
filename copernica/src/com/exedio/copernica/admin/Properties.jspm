package com.exedio.copernica.admin;

import java.io.IOException;
import java.io.PrintStream;

import com.exedio.cope.Properties;

final class Properties_Jspm
{
	private static final String[] systemProperties = new String[]{
			"java.runtime.version",
			"java.class.path",
			"java.version",
			"java.vm.name",
			"java.vm.info",
			"java.vm.version",
		};
	
	final static void write(final PrintStream out, final Properties properties)
		throws IOException
	{
		%>
		<table class="properties">
			<tr>
				<th>source</th>
				<td><%
					final String source = properties.getSource();
					%>
					<a href="file://<%=source%>"><%=source%></a>
					<br>
					<small>
					(link works only if the server is running locally).
					</small>
				</td>
			</tr>
			<tr>
				<th>database</th>
				<td><%=properties.getDatabase()%></td>
			</tr>
			<tr>
				<th>database.url</th>
				<td><%=properties.getDatabaseUrl()%></td>
			</tr>
			<tr>
				<th>database.user</th>
				<td><%=properties.getDatabaseUser()%></td>
			</tr><%
			if(properties.hasDatadir())
			{
				final String datadirPath =
					properties.getDatadirPath().getAbsolutePath();
				final String datadirUrl = properties.getDatadirUrl();
			%>
			<tr>
				<th><%=properties.DATADIR_PATH%></th>
				<td>
					<a href="file://<%=datadirPath%>"><%=datadirPath%></a>
					<br>
					<small>
					(link works only if the server is running locally).
					</small>
				</td>
			</tr>
			<tr>
				<th><%=properties.DATADIR_URL%></th>
				<td>
					<a href="<%=datadirUrl%>"><%=datadirUrl%></a>
					<br>
					<small>
					(link works only if the server allows directory listing,
					which may be a security risk).
					</small>
				</td>
			</tr><%
			}
			else
			{
			%>
			<tr>
				<th>datadir</th>
				<td><b>not available</b></td>
			</tr><%
			}
			
			for(int i = 0; i<systemProperties.length; i++)
			{
				final String name = systemProperties[i];
			%>
			<tr>
				<th><%=name%></th>
				<td><%=System.getProperty(name)%></td>
			</tr><%
			}
			%>
		</table>
<%
	}
}
%>