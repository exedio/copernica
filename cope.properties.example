#
# Example for cope.properties
#

# Example properties for hsqldb
# see http://hsqldb.sourceforge.net/
#
database=hsqldb
database.url=jdbc:hsqldb:.
database.user=sa
database.password=

# Example properties for Oracle
#
database=oracle
database.url=jdbc:oracle:thin:@yourdatabase.yoursite.com:1521:yourSID
database.user=youruser
database.password=yourpassword

# Example properties for MySQL
#
database=mysql
database.url=jdbc:mysql://yourdatabase.yoursite.com/yourDB
database.user=youruser
database.password=yourpassword


# Example properties for the data directory
#
# Is needed only if the project uses DataAttribute,
# otherwise you may remove these properties.
#
datadir.path=the/path/to/your/directory/for/data/files
httpentity.rooturl=/url/prefix/of/your/http/entities/

