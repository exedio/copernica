				<copy tofile="${catalina.home}/conf/Catalina/localhost/copelibtest-@{db}.xml"
						file="runtime/testwebapp.xml">
					<filterset>
						<filter token="DATABASE" value="@{db}" />
					</filterset>
				</copy>
			</body>
		</foreachdb>
	</target>
	
