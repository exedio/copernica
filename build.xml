				failonerror="false" />
		<ljar name="cope" jarfile="runtime/build/exedio-cope.jar">
			<fileset dir="runtime/build/classes" />
		</ljar>
	</target>
	
	<target name="runtime.test.jar" depends="dsmf.test.compile, runtime.test.compile">
		<ljar name="cope test" jarfile="runtime/build/exedio-cope-test.jar">
			<fileset dir="dsmf/build/testclasses" />
			<fileset dir="runtime/build/testclasses" />
			<fileset dir="runtime/build/testmodelclasses" />
		</ljar>
	</target>
	
	<target name="instrument.jar" depends="instrument.compile">
		<ljar name="cope instrumentor" jarfile="instrument/build/exedio-cope-instrument.jar">
			<fileset dir="instrument/build/classes" />
		</ljar>
	</target>
	
	<target name="copernica.jar" depends="copernica.compile">
		<ljar name="copernica" jarfile="copernica/build/exedio-copernica.jar">
			<fileset dir="copernica/build/classes" />
		</ljar>
	</target>
	
	<target name="jar" depends="runtime.jar, runtime.test.jar, instrument.jar, copernica.jar" />
	
	<target name="dsmf.test.compile" depends="dsmf.compile, runtime.compile">
		<ljavac srcdir="dsmf/testsrc" destdir="dsmf/build/testclasses">
			<classpath>
				<pathelement location="runtime/build/classes" />
				<pathelement location="lib/junit.jar" />
			</classpath>
		</ljavac>
	</target>
	
	<target name="dsmf.test.run" depends="dsmf.test.compile">
		<foreachdb message="Testing" skipSwitch="dsmf.test">
			<body>
				<java classname="junit.textui.TestRunner" taskname="junit @{db}" fork="yes" failonerror="yes">
					<classpath>
						<pathelement location="runtime/build/classes" />
						<pathelement location="dsmf/build/testclasses" />
						<pathelement location="lib/junit.jar" />
						<pathelement location="lib/@{db.driver}" />
					</classpath>
					<arg value="com.exedio.dsmf.PackageTest" />
					<sysproperty key="com.exedio.cope.properties" file="@{db.file}" />
				</java>
			</body>
		</foreachdb>
	</target>
	
	<target name="dsmf.test" depends="dsmf.test.run" />
	
	<target name="instrument.taskdef" depends="runtime.compile, instrument.compile">
		<taskdef name="instrument" classname="com.exedio.cope.instrument.AntTask">
			<classpath>
				<pathelement location="lib/pcj.jar" />
				<pathelement location="runtime/build/classes" />
				<pathelement location="instrument/build/classes" />
			</classpath>
		</taskdef>
	</target>
	
	<target name="runtime.testmodel.instrument" depends="instrument.taskdef">
		<instrument verbose="false">
			<fileset dir="runtime/testmodelsrc/com/exedio/cope/testmodel">
				<include name="*Qualifier.java" />
				<include name="AttributeEmptyItem.java" />
			</fileset>
			<fileset dir="runtime/testmodelsrc/com/exedio/cope/testmodel">
				<include name="**/*.java" />
			</fileset>
			<fileset dir="runtime/testsrc/com/exedio/cope">
				<include name="*Super.java" />
			</fileset>
			<fileset dir="runtime/testsrc/com/exedio/cope">
				<include name="**/*.java" />
			</fileset>
		</instrument>
	</target>
	
	<target name="runtime.testmodel.compile" depends="runtime.testmodel.instrument">
		<ljavac srcdir="runtime/testmodelsrc" destdir="runtime/build/testmodelclasses">
			<classpath>
				<pathelement location="runtime/build/classes" />
				<pathelement location="lib/servlet-api.jar" />
			</classpath>
		</ljavac>
	</target>
	
	<target name="runtime.test.compile"
				depends="runtime.testmodel.compile, runtime.junit.compile">
		<ljavac srcdir="runtime/testsrc" destdir="runtime/build/testclasses">
			<classpath>
				<pathelement location="runtime/build/classes" />
				<pathelement location="runtime/build/testmodelclasses" />
				<pathelement location="lib/junit.jar" />
			</classpath>
		</ljavac>
	</target>
	
	<target name="runtime.test.run" depends="runtime.test.compile">
		<delete file="runtime/build/testprotocol.properties" />
		<foreachdb message="Testing" skipSwitch="runtime.test">
			<body>
				<mkdir dir="runtime/build/test.@{db}/data" />
				<copy file="@{db.file}"
						tofile="runtime/build/test.@{db}/cope.properties">
					<filterset>
						<filter token="DATADIR_PATH" value="runtime/build/test.@{db}/data" />
					</filterset>
				</copy>
				<!--nbjpdastart addressproperty="jpda.address" name="cope" transport="dt_socket">
					<classpath>
						<pathelement location="runtime/build/classes" />
						<pathelement location="runtime/build/testmodelclasses" />
						<pathelement location="runtime/build/testclasses" />
						<pathelement location="lib/junit.jar" />
						<pathelement location="lib/pcj.jar" />
						<pathelement location="lib/commons-collections.jar" />
						<pathelement location="lib/@{db.driver}" />
					</classpath>
				</nbjpdastart-->
				<java classname="junit.textui.TestRunner" taskname="junit @{db}" fork="yes" failonerror="yes">
					<classpath>
						<pathelement location="runtime/build/classes" />
						<pathelement location="runtime/build/testmodelclasses" />
						<pathelement location="runtime/build/testclasses" />
						<pathelement location="lib/junit.jar" />
						<pathelement location="lib/pcj.jar" />
						<pathelement location="lib/commons-collections.jar" />
						<pathelement location="lib/@{db.driver}" />
					</classpath>
					<arg value="com.exedio.cope.PackageTest" />
					<sysproperty key="com.exedio.cope.properties" file="runtime/build/test.@{db}/cope.properties" />
					<sysproperty key="com.exedio.cope.testprotocol.file" file="runtime/build/testprotocol.properties" />
					<sysproperty key="com.exedio.cope.testprotocol.prefix" value="@{db}" />
					<!--jvmarg value="-Xdebug"/>
					<jvmarg value="-Xnoagent"/>
					<jvmarg value="-Djava.compiler=none"/>
					<jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/-->
				</java>
			</body>
		</foreachdb>
	</target>
	
	<target name="runtime.test" depends="runtime.test.run" />

	<target name="runtime.test.teardown" depends="runtime.compile, runtime.test.compile">
		<foreachdb message="Tearing down" skipSwitch="runtime.teardown">
			<body>
				<mkdir dir="runtime/build/teardown.@{db}/data" />
				<copy file="@{db.file}"
						tofile="runtime/build/teardown.@{db}/cope.properties">
					<filterset>
						<filter token="DATADIR_PATH"
								  value="runtime/build/teardown.@{db}/data" />
					</filterset>
				</copy>
				<java classname="com.exedio.cope.Main" taskname="tear down @{db}"
						fork="yes" failonerror="yes">
					<classpath>
						<pathelement location="runtime/build/classes" />
						<pathelement location="runtime/build/testmodelclasses" />
						<pathelement location="runtime/build/testclasses" />
						<pathelement location="lib/pcj.jar" />
						<pathelement location="lib/commons-collections.jar" />
						<pathelement location="lib/@{db.driver}" />
					</classpath>
					<sysproperty key="com.exedio.cope.properties"
									 file="runtime/build/teardown.@{db}/cope.properties" />
				</java>
			</body>
		</foreachdb>
	</target>

	<target name="teardown" depends="runtime.test.teardown" />

	<target name="runtime.testwebapp" depends="runtime.compile, runtime.test.compile, runtime.testmodel.compile, copernica.compile">
		<foreachdb message="Using" skipSwitch="runtime.testwebapp">
			<body>
				<mkdir dir="runtime/build/testwebapp-@{db}" />
				
				<copy todir="runtime/build/testwebapp-@{db}/WEB-INF/classes">
					<fileset dir="runtime/build/classes" />
					<fileset dir="runtime/build/testclasses" />
					<fileset dir="runtime/build/testmodelclasses" />
					<fileset dir="copernica/build/classes" />
				</copy>
				
				<copy todir="runtime/build/testwebapp-@{db}/WEB-INF/lib">
					<fileset file="lib/pcj.jar" />
					<fileset file="lib/commons-collections.jar" />
					<fileset file="lib/exedio-cops.jar" />
					<fileset file="lib/@{db.driver}" />
				</copy>
				
				<path id="runtime.webdatadir.@{db.file}.path">
					<pathelement location="runtime/build/testwebapp-@{db}-data" />
				</path>
				<pathconvert targetos="unix" property="runtime.webdatadir.@{db.file}" refid="runtime.webdatadir.@{db.file}.path" />
				
				<copy tofile="runtime/build/testwebapp-@{db}/WEB-INF/cope.properties"
						file="@{db.file}">
					<filterset>
						<filter token="DATADIR_PATH" value="${runtime.webdatadir.@{db.file}}" />
					</filterset>
				</copy>
				<copy todir="runtime/build/testwebapp-@{db}/WEB-INF/"
						file="runtime/web.xml" />
				<mkdir dir="runtime/build/testwebapp-@{db}-data" />
				<touch file="runtime/build/testwebapp-@{db}/WEB-INF/web.xml" />
			</body>
		</foreachdb>
	</target>

	<target name="runtime.tomcat" depends="runtime.testwebapp, catalina.home">
