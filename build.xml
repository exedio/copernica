		<delete dir="lib/api" />
		<mkdir  dir="lib/api" />

		<javadoc
				sourcepath="lib/src"
				destdir="lib/api"
				maxmemory="60m"
				private="${api.private}"
				author="on"
				use="on"
				version="on"
				windowtitle="Cope with Object Persistence"
				doctitle=   "Cope with Object Persistence&lt;br&gt;API Specification"
				header=     "COPE"
				footer=     "Cope with&lt;br&gt;Object&lt;br&gt;Persistence"
				splitindex="on"
				bottom='&lt;small&gt;Copyright &amp;copy; 2004-2005 &lt;a href="http://www.exedio.com/" target="_top"&gt;exedio&lt;/a&gt; Gesellschaft f&amp;uuml;r Softwareentwicklung mbH. All rights reserved.&lt;small&gt;'
